<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/xam"
    android:orientation="vertical"
    tools:context=".product.QuanLyPhuTungActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/black">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:onClick="luaChonThem"
            android:padding="10dp"
            android:src="@drawable/add"
            app:tint="@color/yellow" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="60dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="QUẢN LÝ SẢN PHẨM"
            android:textColor="@color/yellow"
            android:textSize="25sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Quản Lý Phụ Tùng"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Bộ Lọc"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <androidx.appcompat.widget.SearchView
                android:id="@+id/searchTenPT"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_edit"
                android:gravity="center"
                android:theme="@style/AppSearchView"
                app:iconifiedByDefault="false"
                app:queryHint="Nhập tên phụ tùng" />

            <androidx.appcompat.widget.SearchView
                android:id="@+id/searchHang"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_edit"
                android:gravity="center"
                android:theme="@style/AppSearchView"
                app:iconifiedByDefault="false"
                app:queryHint="Nhập mã nhà cung cấp" />

        </LinearLayout>

        <ListView
            android:id="@+id/lvHienThiPhuTung"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

</LinearLayout>